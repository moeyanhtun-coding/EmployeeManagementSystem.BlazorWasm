@page "/employee/create"

<PageTitle>Employee Create</PageTitle>
<h3>Employee Create</h3>
<EditForm Model="EmployeeModel" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="container">
        <div class="row mb-3">
            <div class="col-4 offset-2">
                <label for="FirstName" class="form-label">First Name</label>
                <InputText id="FirstName" class="form-control" @bind-Value="EmployeeModel.FirstName"/>
                <ValidationMessage For="() => EmployeeModel.FirstName" />
            </div>
            <div class="col-4">
                <label for="LastName" class="form-label">Last Name</label>
                <InputText id="LastName" class="form-control" @bind-Value="EmployeeModel.LastName"/>
                <ValidationMessage For="() => EmployeeModel.LastName" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-4 offset-2">
                <label for="Email" class="form-label">Email</label>
                <InputText id="Email" class="form-control" @bind-Value="EmployeeModel.Email"/>
                <ValidationMessage For="() => EmployeeModel.Email" />
            </div>
            <div class="col-4">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="number" id="PhoneNumber" class="form-control" @bind="EmployeeModel.PhoneNumber"/>
                <ValidationMessage For="() => EmployeeModel.PhoneNumber"/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-8 offset-2">
                <label for="Address" class="form-label">Address</label>
                <InputText id="Address" class="form-control" @bind-Value="EmployeeModel.Address"/>
                <ValidationMessage For="() => EmployeeModel.Address" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4 offset-2">
                <label for="PositionCode" class="form-label">Department</label>
                <InputText id="DepartmentCode" class="form-control" @bind-Value="EmployeeModel.DepartmentCode"/>
                <ValidationMessage For="() => EmployeeModel.DepartmentCode" />
            </div>
            <div class="col-4">
                <label for="PositionCode" class="form-label">Position</label>
                <InputText id="PositionCode" class="form-control" @bind-Value="EmployeeModel.PositionCode"/>
                <ValidationMessage For="() => EmployeeModel.PositionCode" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4 offset-2">
                <label for="DateOfJoining" class="form-label">Date of Joining</label>
                <InputDate id="DateOfJoining" class="form-control" @bind-Value="EmployeeModel.DateOfJoining" />
                <ValidationMessage For="() => EmployeeModel.DateOfJoining" />
            </div>
            <div class="col-4">
                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                <InputDate id="DateOfBirth" class="form-control" @bind-Value="EmployeeModel.DateOfBirth" />
                <ValidationMessage For="() => EmployeeModel.DateOfBirth" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-8 offset-2 text-end">
                <NavLink class="btn btn-dark" href="employeeList">Back</NavLink>
                <button type="submit" class="btn btn-primary">Create Employee</button>
            </div>
        </div>
    </div>
</EditForm>

